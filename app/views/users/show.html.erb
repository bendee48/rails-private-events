<h3><%= @user.name %>'s Page</h3>
<h1>Created Events</h1>

<% @user.created_events.each do |e| %>
  <p>Title: <%= e.title %></p>
  <p>Details: <%= e.body %></p>
  <p>Date: <%= e.date %></p>
  <p>Location: <%= e.location %></p>
  <hr>
<% end %>

<h1>Upcoming Events</h1>
<% @user.upcoming_events.each do |e| %>
  <p>Title: <%= e.title %></p>
  <p>Details: <%= e.body %></p>
  <p>Date: <%= e.date %></p>
  <p>Location: <%= e.location %></p>
  <p>Created by: <%= e.creator.name %></p>
  <hr>
<% end %>

<h1>Past Events</h1>
<% @user.past_events.each do |e| %>
  <p>Title: <%= e.title %></p>
  <p>Details: <%= e.body %></p>
  <p>Date: <%= e.date %></p>
  <p>Location: <%= e.location %></p>
  <p>Created by: <%= e.creator.name %></p>
  <hr>
<% end %>
